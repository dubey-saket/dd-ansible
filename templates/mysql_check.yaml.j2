---
# MySQL Check Configuration
# Generated by Ansible - Do not edit manually

init_config:

instances:
{% for instance in datadog_checks_merged.mysql.instances %}
  - host: "{{ instance.host | default('localhost') }}"
    port: {{ instance.port | default(3306) }}
    {% if instance.user is defined %}
    user: "{{ instance.user }}"
    {% endif %}
    {% if instance.password is defined %}
    password: "{{ instance.password }}"
    {% endif %}
    {% if instance.database is defined %}
    database: "{{ instance.database }}"
    {% endif %}
    {% if instance.queries is defined %}
    queries:
{% for query in instance.queries %}
      - name: "{{ query.name }}"
        query: "{{ query.query }}"
{% endfor %}
    {% endif %}
    {% if instance.tags is defined %}
    tags:
{% for tag in instance.tags %}
      - "{{ tag }}"
{% endfor %}
    {% endif %}
{% endfor %}
