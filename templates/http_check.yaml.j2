---
# HTTP Check Configuration
# Generated by Ansible - Do not edit manually

init_config:

instances:
{% for instance in datadog_checks_merged.http_check.instances %}
  - name: "{{ instance.name }}"
    url: "{{ instance.url }}"
    timeout: {{ instance.timeout | default(10) }}
    {% if instance.include_content is defined %}
    include_content: {{ instance.include_content | lower }}
    {% endif %}
    {% if instance.collect_response_time is defined %}
    collect_response_time: {{ instance.collect_response_time | lower }}
    {% endif %}
    {% if instance.tags is defined %}
    tags:
{% for tag in instance.tags %}
      - "{{ tag }}"
{% endfor %}
    {% endif %}
    {% if instance.headers is defined %}
    headers:
{% for key, value in instance.headers.items() %}
      "{{ key }}": "{{ value }}"
{% endfor %}
    {% endif %}
    {% if instance.username is defined %}
    username: "{{ instance.username }}"
    {% endif %}
    {% if instance.password is defined %}
    password: "{{ instance.password }}"
    {% endif %}
{% endfor %}
