---
# Disk Check Configuration
# Generated by Ansible - Do not edit manually

init_config:

instances:
{% for instance in datadog_checks_merged.disk.instances %}
  - use_mount: {{ instance.use_mount | default(true) | lower }}
    {% if instance.exclude is defined %}
    exclude:
{% for path in instance.exclude %}
      - "{{ path }}"
{% endfor %}
    {% endif %}
    {% if instance.include is defined %}
    include:
{% for path in instance.include %}
      - "{{ path }}"
{% endfor %}
    {% endif %}
    {% if instance.warning is defined %}
    warning: {{ instance.warning }}
    {% endif %}
    {% if instance.critical is defined %}
    critical: {{ instance.critical }}
    {% endif %}
    {% if instance.tags is defined %}
    tags:
{% for tag in instance.tags %}
      - "{{ tag }}"
{% endfor %}
    {% endif %}
{% endfor %}
