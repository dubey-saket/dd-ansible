---
# Nginx Check Configuration
# Generated by Ansible - Do not edit manually

init_config:

instances:
{% for instance in datadog_checks_merged.nginx.instances %}
  - nginx_status_url: "{{ instance.nginx_status_url | default('http://localhost/nginx_status') }}"
    {% if instance.collect_nginx_metrics is defined %}
    collect_nginx_metrics: {{ instance.collect_nginx_metrics | lower }}
    {% endif %}
    {% if instance.user is defined %}
    user: "{{ instance.user }}"
    {% endif %}
    {% if instance.password is defined %}
    password: "{{ instance.password }}"
    {% endif %}
    {% if instance.tags is defined %}
    tags:
{% for tag in instance.tags %}
      - "{{ tag }}"
{% endfor %}
    {% endif %}
{% endfor %}
